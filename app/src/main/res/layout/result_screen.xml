<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_rain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/result_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="12:12"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/result_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sab, 01 Abril"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/result_hora"
                app:layout_constraintStart_toStartOf="@+id/result_hora"
                app:layout_constraintTop_toBottomOf="@+id/result_hora" />

        <TextView
                android:id="@+id/result_degrees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="27Â°c"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@id/guidelineVerticalStart"
                app:layout_constraintTop_toBottomOf="@id/guidelineHorizontalEnd" />

        <android.support.constraint.Guideline
                android:id="@+id/guidelineHorizontalEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="81dp" />

        <android.support.constraint.Guideline
                android:id="@+id/guidelineVerticalStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="30dp" />

        <TextView
                android:id="@+id/result_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sao Paulo"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/guidelineVerticalEnd"
                app:layout_constraintTop_toBottomOf="@id/guidelineHorizontalEnd" />

        <TextView
                android:id="@+id/result_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ensolarado"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/guidelineVerticalEnd"
                app:layout_constraintTop_toBottomOf="@id/result_city" />

        <android.support.constraint.Guideline
                android:id="@+id/guidelineVerticalEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="30dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>